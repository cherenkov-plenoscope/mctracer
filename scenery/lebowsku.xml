<function name="zero">
	<constant value="0.0" lower_limit="200e-9" upper_limit="1200e-9"/>
</function>

<function name="leaf_reflection">
	<constant value="0.5" lower_limit="200e-9" upper_limit="1200e-9"/>
</function>

<function name="mirror_reflection">
	<constant value="0.80" lower_limit="200e-9" upper_limit="1200e-9"/>
</function>

<function name="lens_refraction">
	<constant value="1.49" lower_limit="200e-9" upper_limit="1200e-9"/>
</function>

<disc>
	<set_frame name="ground" pos="[0,0,-2]" rot="[0,0,0]"/>		
	<set_surface reflection_vs_wavelength="zero" colour="[22,91,49]"/>	
	<set_disc radius="100"/>
	<set_sensitive id="0"/>
</disc>

<function name="sensor_reflection">
	<constant value="0.1" lower_limit="200e-9" upper_limit="1200e-9"/>
</function>

<stl>
	<set_frame name="spider" pos="[0,-1,0.3]" rot="[0,0,0]"/>
	<set_stl file="spider.stl" scale="0.05"/>
</stl>

<frame>
	<set_frame name="tree" pos="[5,5,-2]" rot="[0,0,0]"/>	
	
	<sphere>
		<set_frame name="leaf_ball" pos="[0,0,3]" rot="[0,0,0]"/>
		<set_surface reflection_vs_wavelength="leaf_reflection" colour="[25,200,0]"/>
		<set_sphere radius="1.5"/>
	</sphere>	

	<cylinder>
		<set_frame name="pole" pos="[0,0,0]" rot="[0,0,0]"/>
		<set_surface reflection_vs_wavelength="zero" colour="[200,200,0]"/>
		<set_cylinder radius="0.25" start_pos="[0,0,0]" end_pos="[0,0,1.5]"/>	
	</cylinder>
</frame>

