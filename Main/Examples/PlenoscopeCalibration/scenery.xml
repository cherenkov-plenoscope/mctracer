<scenery author="Sebastian" comment="The giant Portal">
    <function name="mirror_reflection">
        <constant value="0.8" lower_limit="200e-9" upper_limit="1200e-9"/>
    </function>

    <function name="lens_refraction">
        <constant value="1.49" lower_limit="200e-9" upper_limit="1200e-9"/>
    </function>

    <frame>
        <set_frame name="Portal" pos="[0,0,0]" rot="[0,0,0]"/>
        <segmented_reflector>
            <set_frame name="reflector" pos="[0,0,0]" rot="[0,0,0]"/>
            <set_surface reflection_vs_wavelength="mirror_reflection"/>
            <set_segmented_reflector 
                focal_length="150.0" 
                max_outer_aperture_radius="50" 
                min_inner_aperture_radius="5" 
                DaviesCotton_over_parabolic_mixing_factor="0.0" 
                facet_inner_hex_radius="0.75" 
                gap_between_facets="0.02"/>
        </segmented_reflector>
        <light_field_sensor>
            <set_frame name="light_field_sensor" pos="[0,0,150.0]" rot="[0,0,0]"/>
            <set_light_field_sensor
                expected_imaging_system_focal_length="150.0"
                expected_imaging_system_aperture_radius="50.0"
                max_FoV_diameter_deg="6.5" 
                hex_pixel_FoV_flat2flat_deg="0.0667" 
                housing_overhead="1.1" 
                number_of_paxel_on_pixel_diagonal="13" 
                lens_refraction_vs_wavelength="lens_refraction"
                bin_reflection_vs_wavelength="mirror_reflection"
            />
        </light_field_sensor>
    </frame>
</scenery>