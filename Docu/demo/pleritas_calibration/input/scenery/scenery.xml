<scenery author="Sebastian" comment="A VERITAS plenoscope">
    <function name="zero">
        <constant value="0.0" lower_limit="200e-9" upper_limit="1200e-9"/>
    </function>

    <function name="mirror_reflection">
        <constant value="0.8" lower_limit="200e-9" upper_limit="1200e-9"/>
    </function>

    <function name="lens_refraction">
        <constant value="1.49" lower_limit="200e-9" upper_limit="1200e-9"/>
    </function>

    <frame>
        <set_frame name="PLERITAS" pos="[0,0,0]" rot="[0,0,0]"/>
        <segmented_reflector>
            <set_frame name="imaging_reflector" pos="[0,0,0]" rot="[0,0,0]"/>
            <set_surface reflection_vs_wavelength="mirror_reflection"/>
            <set_segmented_reflector 
                focal_length="12.0" 
                max_outer_aperture_radius="5" 
                min_inner_aperture_radius="0.2" 
                DaviesCotton_over_parabolic_mixing_factor="0.0" 
                facet_inner_hex_radius="0.3" 
                gap_between_facets="0.01"/>
        </segmented_reflector>

        <stl>
            <set_frame name="spider" pos="[-1.5, -1.75, 0.4]" rot="[0,0,0]"/>
            <set_stl file="spider.stl" scale="0.12"/>
            <set_surface reflection_vs_wavelength="zero" color="[255,91,49]"/>
        </stl>

        <light_field_sensor>
            <set_frame name="light_field_sensor" pos="[0,0,12.0]" rot="[0,0,0]"/>
            <set_light_field_sensor
                expected_imaging_system_focal_length="12.0"
                expected_imaging_system_aperture_radius="5"
                max_FoV_diameter_deg="3.5" 
                hex_pixel_FoV_flat2flat_deg="0.1" 
                housing_overhead="1.3" 
                number_of_paxel_on_pixel_diagonal="5" 
                lens_refraction_vs_wavelength="lens_refraction"
                bin_reflection_vs_wavelength="mirror_reflection"
            />
        </light_field_sensor>
    </frame>
</scenery>